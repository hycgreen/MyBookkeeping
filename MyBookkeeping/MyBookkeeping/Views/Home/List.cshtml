@model IEnumerable<MyBookkeeping.Models.ViewModel.JournalListViewModel>
@{
    Layout = "";
    int i = 1;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>
                        @item.Category
                    </td>
                    <td>
                        @item.Date.ToShortDateString()
                    </td>
                    <td>
                        @item.Amount.ToString("#,#")
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
