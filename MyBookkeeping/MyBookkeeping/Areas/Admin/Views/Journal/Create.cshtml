@model MyBookkeeping.Models.ViewModel.JournalViewModel

@{
    Layout = "";
}

@using (Ajax.BeginForm("Create", new { area = "Admin" }, new AjaxOptions
    {
        UpdateTargetId = "ajaxList",
        LoadingElementDuration = 1000,
        LoadingElementId = "ajaxLoading"
    }))
{
    @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Category, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(m => m.Category, "請選擇", new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Category)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Amount, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Amount)
                @Html.ValidationMessageFor(m => m.Amount)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Date, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(m => m.Date)
                @Html.ValidationMessageFor(m => m.Date)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Remark, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Remark, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Remark)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <input type="submit" value="送出" class="btn btn-default" />
            </div>
        </div>
}