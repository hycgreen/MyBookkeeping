@model IEnumerable<MyBookkeeping.Models.ViewModel.JournalListViewModel>
@using X.PagedList
@using X.PagedList.Mvc
@{
    Layout = "";
    int i = 0;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(m => m.Category)</th>
                <th>@Html.DisplayNameFor(m => m.Date)</th>
                <th>@Html.DisplayNameFor(m => m.Amount)</th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(++i)</td>
                    <td>
                        @Journal.DisplayCategory(item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Amount)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
